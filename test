var px=100;//x position
var py=100;//y position
var vx=0;// x velocity
var vy=0;//y velocity
blocks=[];
//add a new block to the array:
newBlock=function(x,y,w,h,type){
  blocks[blocks.length]={
    x:x,
    y:y,
    w:w,
    h:h,
    type:type
  };
};
var i=0;
var onGround=false;
var touchingLeftWall=false;
var touchingRightWall=false;
var touchingCeiling=false;
