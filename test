var jump=function(){
  vy-=30;
};
function draw() {
      var canvas=document.getElementById('canvas');
  if (canvas.getContext) {
    var ctx = canvas.getContext('2d');
    ctx.clearRect(0,0,1350,1350);
    ctx.fillStyle = 'rgb(0, 40, 200)';
    ctx.fillRect(x, y, 50, 50);
    x+=vx;
    y+=vy;
    if(vy>9000){
      vy=0;
    }
    if(vx>9000){
      vx=0;
    }
    if(x>1400){
      x=-50;
    }
    if(y>1400){
      y=-50;
    }
    if(x<-50){
      x=1400;
    }
    if(y<-50){
      y=1400;
    }
    /*if(onGround){
      if(vy>0){
        vy=0;
      }
    }else{
      vy+=1;
    }*/
  }
  window.requestAnimationFrame(draw);
}
window.requestAnimationFrame(draw);
